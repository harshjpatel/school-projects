<div class="login-main">
  <div class="vertical-center">
    <div class="l-container color-white">
      <div class="image">
      </div>
      <div class="row center">
        <div class="welcome">
          <span class="welcome-text">Welcome Back, {{lastLoginUsername}}</span>
        </div>
      </div>
      <div class="row center">
        <div class="username ">
          {{input type="text" name="username" class="form-control form-control-inline center" valueBinding="username" placeholder="Username"}}
        </div>
      </div>
      <div class="row center">
        <div class="password">
          {{input type="password" name="password" valueBinding="password" class="form-control form-control-inline center" placeholder="Password"}}
        </div>
      </div>
      <div class="row center">
        <div class="submit">
          <button type="submit" name="button" class="login-btn" {{action "submit"}}>LOG IN</button>
        </div>
      </div>
      <div class="row center">
        <div class="forgot-pass">
          <a href="#">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{yield}}
