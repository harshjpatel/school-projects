<div class="wrapper">
  <button type="button" name="button" class="add add-position" {{action 'addDepartment'}}>Add Department</button>
  <div class="confirm-delete color-white">
    <span class="ask">Are you sure you wish to delete this department?</span>
    <br>
    <div class="center">
      <button type="button" name="button" {{action 'deleteModel' param=id}} class="btn-yes">Yes</button>
      <button type="button" name="button" {{action 'cancelDeleteModel'}} class="btn-no">No</button>
    </div>
  </div>
  <div class="notification-delete">
    <span>{{inline-svg "checkmark.svg" class='checkmark'}} Department successfully deleted! &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="cancel-notification">x</span></span>
  </div>
  {{general-table model=model column1="Name" confirmDelete='confirmDelete' editDepartment='editDepartment' param=id isDepartment=isDepartment}}
</div>

{{outlet}}
