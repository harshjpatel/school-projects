<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:fadeScrollbars="true"
    android:isScrollContainer="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_dark"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fadeScrollbars="true"
        android:isScrollContainer="true"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_dark"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/code"
                app:layout_constraintTop_toBottomOf="@+id/code"
                tools:ignore="RtlHardcoded,TextViewEdits" />

            <TextView
                android:id="@+id/sansex"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/percentage"
                android:layout_marginRight="0dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/percentage"
                android:layout_width="59dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/background_light"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="29dp"
                android:layout_height="34dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/sansex"
                android:layout_marginRight="0dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginLeft="128dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/background_light"
                app:layout_constraintLeft_toRightOf="@+id/code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/sign"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.378"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/code"
                android:layout_width="68dp"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/background_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>


